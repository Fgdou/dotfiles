general {
        colors = true
        interval = 1
}

order += "read_file uptime"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "ðŸ“¶ %essid %quality %ip"
